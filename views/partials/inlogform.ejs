<form class="login" action="/login" method="POST">
  <fieldset>
    <legend>Log-in</legend>
    <%- include('../partials/messages') %>
    <label for="email">E-mail</label>
    <input
      type="text"
      name="email"
      placeholder="name">
    <label for="password">Wachtwoord</label>
    <input
      type="password"
      name="password"
      placeholder="password">
    <input
      type="submit"
      name="save"
      placeholder="Log-in">
  </fieldset>
</form>
