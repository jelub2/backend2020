      <h3>Dine</h3>
  </div>
</section>

<section class="activityList">
  <h2>uitgelicht</h2>
  <% activiteiten.forEach(function(anyPrm, index){  %>
  <section class="activitycard">
    <img src="assets/images/placeholder.jpg" alt="">
    <ul>
      <li><%= anyPrm.activity_title %></li>
      <li><%= anyPrm.org_name %></li>
      <li><%= anyPrm.date %></li>
    </ul>
    <a href="/activiteiten/<%= anyPrm._id%>">bekijk activiteit</a>
  </section>
  <% }); %>
</section>
</main>

